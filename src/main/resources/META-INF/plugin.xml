<idea-plugin>
    <!--
    SEE https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html
    Attributes that will be generated by the patchPluginXml Gradle task
        * <id>
        * <version>
        * <idea-version>
        * <description>
        * <change-notes>
    -->
    <name>Vault</name>
    <vendor url="https://github.com/codecacti/intellij-vault-plugin" email="spencerdcarlson@gmail.com">CodeCacti</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.database</depends>

    <extensions defaultExtensionNs="com.intellij.database">
        <connectionInterceptor implementation="com.sdc.vault.ui.VaultAuthInterceptor" order="first"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.sdc.vault.state.AppSettingsState"/>

        <applicationConfigurable parentId="tools" instance="com.sdc.vault.settings.ui.AppSettingsConfigurable"
                                 id="com.sdc.vault.settings.ui.AppSettingsConfigurable"
                                 displayName="Vault"/>
    </extensions>
</idea-plugin>
